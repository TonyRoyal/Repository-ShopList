@model IEnumerable<ShopList.Models.Shop>

@{
    Layout = null;
}

@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список магазинов</title>
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <h1>Shop List</h1>
    <h2>Список магазинов и товаров</h2>
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.WorkHours)</th>
            <th>Товары</th>
        </tr>
    
        @if (Model.Count() > 0)
        {
            foreach (var item in Model) 
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.WorkHours)</td>
                    <td>@Ajax.ActionLink("Нажмите для просмотра товаров", "GetShopProducts", new { shopId = item.Id }, new AjaxOptions() { UpdateTargetId = "products" })</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Список пуст</td>
            </tr>
        }
    
    </table>
    <div id="products" />
</body>
</html>